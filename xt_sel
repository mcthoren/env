#!/bin/ksh

NUM=$(($RANDOM%7));

((NUM==0)) && XTARGS="-fg #00e000"
((NUM==1)) && XTARGS="-fg DeepSkyBlue"
((NUM==2)) && XTARGS="-fg cyan"
((NUM==3)) && XTARGS="-fg LimeGreen"
((NUM==4)) && XTARGS="-fg #FF20FF"
((NUM==5)) && XTARGS="-fg MediumSpringGreen"
((NUM==6)) && XTARGS="-fg SpringGreen"

((NUM==88)) && XTARGS="-fg DeepPink"
((NUM==99)) && XTARGS="-fg yellow"
((NUM==98)) && XTARGS="-fg red"
((NUM==87)) && XTARGS=""

# i don't set shell var at work, cuz it's in ldap, and few other workstations have it installed.
if [ `hostname -s` = "ep117" ]; then
	xterm $@ $XTARGS `which zsh` &
else
	xterm $@ $XTARGS &
fi
