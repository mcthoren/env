#!/usr/local/bin/zsh

colors=(cyan green1)

xt_sel () {

	NUM=$(($RANDOM%${#colors}+1));
	COLOR=$colors[$NUM]

	(( $# == 0 )) &&
		{
			xterm -fg $COLOR &
			# xterm -fa "*" -fs 11 -fg $COLOR &
		} || {
			xterm -fg $COLOR -geometry $1 &
			# xterm -fa "*" -fs 11 -fg $COLOR -geometry $@ &
		}
}

if [ `hostname -s` = "socket" ]; then
	LGEOM="111x56+0+0"
	RGEOM="111x56-0+0"
	BL="111x26+0-0"
	BR="111x26-0-0"
	TL="111x26+0+0"
	TR="111x26-0+0"
	FULL="222x55+0+0"
else
	LGEOM="111x56+0+0"
	RGEOM="111x56-0+0"
	BL="111x27+0-0"
	BR="111x27-0-0"
	TL="111x26+0+0"
	TR="111x26-0+0"
	FULL="225x56+0+0"
fi

(($#==0)) && xt_sel 

(($#==1)) && {
	[ $1 = "L" ] && xt_sel $LGEOM
	[ $1 = "R" ] && xt_sel $RGEOM
	[ $1 = "F" ] && xt_sel $FULL
	[ $1 = "T" ] && {
		xt_sel $BL
		xt_sel $BR
		xt_sel $TL
		xt_sel $TR
	}
}
